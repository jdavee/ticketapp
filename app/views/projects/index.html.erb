<div class="main-heading">
<span><%= link_to 'Create New Project', new_project_path, :class => "heading-btn btn btn-primary btn-sm" %></span>
<h3>All Projects</h3>
</div>

<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= truncate("#{project.description}", length: 80, omission: '...') %></td>
        <td><%= "#{project.user.first_name} #{project.user.last_name}" %></td>
        <td class="list_actions">
          <div class="btn-group">
            <%= link_to "Edit", edit_project_path(project), :class => "btn btn-default btn-xs" %>
            <%= link_to "Delete", project, method: :delete, data: {confirm: 'Are you sure?' }, :class => "btn btn-primary btn-xs" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="main-heading"></div>
<br>
