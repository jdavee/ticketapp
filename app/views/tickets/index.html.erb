<div class="main-heading">
<h3>All Tickets</h3>
</div>
<table class="table table-striped table-hover table-responsive table-condensed">
  <thead>
    <tr>
      <th>Project</th>
      <th>User</th>
      <th>Issue type</th>
      <th>Issue status</th>
      <th>Name</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.project.name %></td>
        <td><%= "#{ticket.user.first_name} #{ticket.user.last_name}" %></td>
        <td><%= ticket.issue_type.name %></td>
        <td><%= ticket.issue_status.name %></td>
        <td><%= ticket.name %></td>
        <td class="comment-column"><%= ticket.comment %></td>
        <td class="list_actions">
          <div class="btn-group">
            <%= link_to "View", ticket, :class => "btn btn-primary btn-xs" %>
            <%= link_to "Edit", edit_ticket_path(ticket), :class => "btn btn-default btn-xs" %>
            <%= link_to "Delete", ticket, method: :delete, data: {confirm: 'Are you sure?' }, :class => "btn btn-primary btn-xs" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="main-heading"></div>
<br>

<div class="create-ticket">
<%= link_to 'Create New Ticket', new_ticket_path %>
</div>
