<div class="main-heading">
<span><%= link_to 'Create New User', new_user_path, :class => "heading-btn btn btn-primary btn-sm" %></span>
<h3>All Users</h3>
</div>

<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>E-Mail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td class="list_actions">
          <div class="btn-group">
            <%= link_to "Edit", edit_user_path(user), :class => "btn btn-default btn-xs" %>
            <%= link_to "Delete", user, method: :delete, data: {confirm: 'Are you sure?' }, :class => "btn btn-primary btn-xs" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="main-heading"></div>
<br>
