<div class="main-heading">
<span><%= link_to 'Create New Issue Type', new_issue_type_path, :class => "heading-btn btn btn-primary btn-sm" %></span>
<h3>All Issue Types</h3>
</div>

<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @issue_types.each do |issue_type| %>
      <tr>
        <td><%= issue_type.name %></td>
        <td class="list_actions">
          <div class="btn-group">
            <%= link_to "Edit", edit_issue_type_path(issue_type), :class => "btn btn-default btn-xs" %>
            <%= link_to "Delete", issue_type, method: :delete, data: {confirm: 'Are you sure?' }, :class => "btn btn-primary btn-xs" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="main-heading"></div>
<br>
